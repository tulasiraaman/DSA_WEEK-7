class Solution {
    public boolean isPalindrome(ListNode head) {
        if(head == null || head.next == null) return true;

        //step 1: find middle
        ListNode slow = head, fast = head;
        //fast != null no need!!
        //if we want end of the first half, not the start of the second half check next.next.
        while(fast.next != null && fast.next.next != null){
            slow = slow.next;
            fast = fast.next.next;
        }

        //step 2: reverse second half
        ListNode second = reverse(slow.next);
        slow.next = null;
        ListNode first = head;

        //step 3: compare both are equal
        while(second != null){
            if(first.val != second.val) return false;
            first = first.next;
            second = second.next;
        }
        return true;
    }

    private ListNode reverse(ListNode head) {
        ListNode prev = null;
        while(head != null){
            ListNode temp = head.next;
            head.next = prev;
            prev = head;
            head = temp;
        }
        return prev;
    }
}
