class Solution {
    public Node addTwoLists(Node head1, Node head2) {
        // code here
        head1 = reverse(head1);
        head2 = reverse(head2);
        
        Node result = null;
        int carry = 0;
        
        while(head1 != null || head2 != null || carry > 0){
            int sum = carry;
            
            if(head1 != null){
                sum += head1.data;
                head1 = head1.next;
            }
            
            if(head2 != null){
                sum += head2.data;
                head2 = head2.next;
            }
            
            Node newNode = new Node(sum % 10);
            newNode.next = result;
            result = newNode;

            carry = sum / 10;
        }

        // Step 3: Remove leading zeros
        while (result != null && result.data == 0 && result.next != null) {
            result = result.next;
        }

        return result;
    }
    
    private Node reverse(Node head) {
        Node prev = null, curr = head;
        while (curr != null) {
            Node next = curr.next;
            curr.next = prev;
            prev = curr;
            curr = next;
        }
        return prev;
    }

}
