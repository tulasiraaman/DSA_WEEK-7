class Solution {
    public ListNode oddEvenList(ListNode head) {
        if(head == null || head.next == null) return head;

        ListNode odd = head, even = head.next; // initialize odd -> n, even -> n
        ListNode oddP = head, evenP = head.next; // initialize pointers

        while(evenP != null && evenP.next != null){
            oddP.next = oddP.next.next; // points odd node
            evenP.next = evenP.next.next; // points even node
            oddP = oddP.next; // move odd pointer that stored in 'oddP.next' variable.
            evenP = evenP.next; // move even pointer that stored in 'evenP.next' variable.
        }
        oddP.next = even; // connect odd list to even list
        return odd;
    }
}
