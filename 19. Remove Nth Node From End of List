class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
        ListNode result = new ListNode(-1, head); // create new LL starts with -1 points head
        ListNode slow = result, fast = result; // starts from -1

        for(int i = 0; i <= n;i++) fast = fast.next; // move fast pointer to n times
        while(fast != null){
            fast = fast.next;
            slow = slow.next;
        }
        //if the fast pointer reach null slow.next is the element to remove.
        slow.next = slow.next.next;
        return result.next;
    }
}
