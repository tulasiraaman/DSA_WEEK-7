class Solution {
    public ListNode deleteMiddle(ListNode head) {
        if(head == null || head.next == null) return null;

        // ListNode fast = head;
        ListNode slow = head;
        ListNode fast = head.next.next; // start fast ahead

        // ListNode prev = null;
        while(fast != null && fast.next != null){
            // prev = slow;
            slow = slow.next;
            fast = fast.next.next;
        }
        // prev.next = slow.next;
        slow.next = slow.next.next;
        return head;        
    }// TC - O(n), SC - O(1)
}
